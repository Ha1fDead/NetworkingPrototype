{
    "extends": "tslint:recommended",
    "rules": {
        // temporary -- not sure if I like the recommended settings
        "array-type": false,
        "class-name": true,
        "indent": [
            true,
            "tabs"
        ],
        "max-line-length": {
            "options": [
                160
            ]
        },
        // "member-ordering": [
        //     true,
        //     {
        //         "order": [
        //             "public-static-field",
        //             "public-instance-field",
        //             "public-constructor",
        //             "private-static-field",
        //             "private-instance-field",
        //             "private-constructor",
        //             "public-instance-method",
        //             "protected-instance-method",
        //             "private-instance-method"
        //         ]
        //     }
        // ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        
        // default setting of tslint. I don't like it because its arbitrary and, in conjunction with max length, causes me some headaches.
        "no-trailing-whitespace": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}
